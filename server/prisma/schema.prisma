generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model USER{
  id String @id @default(uuid())
  name String
  email_id String
  password String
  created_on DateTime @default(now())
  update_on DateTime @default(now())

  @@index(fields: [email_id(sort:Desc)])
}

model Ai_mails_info{
  msg_id String @unique @id 
  chain_id String 
  user_ids String[]
  to String[]
  from String 
  cc String[]
  bcc String[]
  subject String
  in_reply_to String
  received_date DateTime
  message_id String
  created_on DateTime @default(now())
  @@index(fields:[msg_id,message_id])
}

model mail_body{
  msg_id String @unique @id 
  chain_id String 
  in_reply_to String
  refrences String[]
  htmlBody String
  textBody String 
  textAsHtml String
  attachments String[]
  created_on DateTime @default(now())
  @@index(fields:[msg_id(sort:Desc),chain_id])
}